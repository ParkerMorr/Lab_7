//- team_stats.pug
include ../partials/header.pug
include ../partials/menu.pug

div.container
  br
  div.jumbotron
    h1.display-4 Fall 2018 Stats
    p.lead CU Football Statistics for the 2018 Football Season!

  table.table.table-bordered#stats_table
    tr
      th.align-bottom(rowspan="2") Game Date
      th.align-bottom(rowspan="2") Opposing Team Name
      th.text-center(colspan="2") Score
      th.align-bottom(rowspan="2") Winner
    tr
      th Home Score
      th Opp. Score
    - if(data)
        console.log(data)
        for item in data
          if(item.game_date)
            tr
              -var winner="Colorado"
              th= item.game_date
              th= item.visitor_name
              th= item.home_score
              th= item.visitor_score
              if item.home_score > item.visior_score
                -th winner= "Colorado"
              else
                -th winner = item.visitor_name
            tr
  br

  table.table.text-center
    tr
      th Wins
      th Losses
    tr
      - if(data)
        -var wins = 0
        -var loses = 0
        console.log(data)
        for item in data
          if(item.game_date)
            tr
              if(home_score > visior_score)
                -wins = wins + 1             
              else
                -loses = loses + 1
        th= wins
        th= loses
    tr

include ../partials/footer.pug
